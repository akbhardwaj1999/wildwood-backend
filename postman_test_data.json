{
  "base_url": "http://127.0.0.1:8000",
  
  "1_register_user": {
    "method": "POST",
    "url": "http://127.0.0.1:8000/api/accounts/register/",
    "headers": {
      "Content-Type": "application/json"
    },
    "body": {
      "username": "john_doe",
      "email": "john.doe@example.com",
      "first_name": "John",
      "last_name": "Doe",
      "password": "SecurePass123!",
      "password2": "SecurePass123!"
    }
  },
  
  "2_login": {
    "method": "POST",
    "url": "http://127.0.0.1:8000/api/accounts/login/",
    "headers": {
      "Content-Type": "application/json"
    },
    "body": {
      "username": "john_doe",
      "password": "SecurePass123!"
    }
  },
  
  "3_get_profile": {
    "method": "GET",
    "url": "http://127.0.0.1:8000/api/accounts/profile/",
    "headers": {
      "Authorization": "Bearer PASTE_YOUR_ACCESS_TOKEN_HERE",
      "Content-Type": "application/json"
    },
    "body": null
  },
  
  "4_update_profile_only": {
    "method": "PATCH",
    "url": "http://127.0.0.1:8000/api/accounts/profile/update/",
    "headers": {
      "Authorization": "Bearer PASTE_YOUR_ACCESS_TOKEN_HERE",
      "Content-Type": "application/json"
    },
    "body": {
      "first_name": "Johnny",
      "last_name": "Smith",
      "email": "johnny.smith@example.com"
    }
  },
  
  "5_update_password": {
    "method": "PATCH",
    "url": "http://127.0.0.1:8000/api/accounts/profile/update/",
    "headers": {
      "Authorization": "Bearer PASTE_YOUR_ACCESS_TOKEN_HERE",
      "Content-Type": "application/json"
    },
    "body": {
      "current_password": "SecurePass123!",
      "new_password": "NewSecurePass456!",
      "confirm_password": "NewSecurePass456!"
    }
  },
  
  "6_update_profile_and_password": {
    "method": "PATCH",
    "url": "http://127.0.0.1:8000/api/accounts/profile/update/",
    "headers": {
      "Authorization": "Bearer PASTE_YOUR_ACCESS_TOKEN_HERE",
      "Content-Type": "application/json"
    },
    "body": {
      "first_name": "Johnny",
      "email": "johnny@example.com",
      "current_password": "SecurePass123!",
      "new_password": "NewSecurePass456!",
      "confirm_password": "NewSecurePass456!"
    }
  },
  
  "7_logout": {
    "method": "POST",
    "url": "http://127.0.0.1:8000/api/accounts/logout/",
    "headers": {
      "Authorization": "Bearer PASTE_YOUR_ACCESS_TOKEN_HERE",
      "Content-Type": "application/json"
    },
    "body": {}
  },
  
  "8_list_users_admin": {
    "method": "GET",
    "url": "http://127.0.0.1:8000/api/accounts/users/",
    "headers": {
      "Authorization": "Bearer PASTE_ADMIN_ACCESS_TOKEN_HERE",
      "Content-Type": "application/json"
    },
    "body": null
  },
  
